{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-typescript",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": [
      "./tsconfig.json"
    ],
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "@typescript-eslint/explicit-function-return-type": 0,
    "@typescript-eslint/consistent-type-imports": 0,
    "@typescript-eslint/no-unused-vars": 1,
    "no-multiple-empty-lines": 2
  },
  "plugins": [
    "react",
    "import"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
